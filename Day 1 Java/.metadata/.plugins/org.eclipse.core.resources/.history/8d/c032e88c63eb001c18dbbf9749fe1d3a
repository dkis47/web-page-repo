import java.io.*;
import java.util.Scanner;
import java.util.stream.*;

public class Main {

	public static void main(String[] args) {
		// Split string using space between words and place them into array []
		String sentence = "Are you as excited as I am?";
		String reverseSentence = "";

		String[] split = sentence.split(" ");

		// for loop that iterate backwards

		for (int i = split.length - 1; i >= 0; i--) {
			reverseSentence = reverseSentence + split[i] + " ";

		}

		System.out.println(reverseSentence);

		// placing ? on the end of the sentence

		reverseSentence = reverseSentence.replace("?", "");
		reverseSentence = reverseSentence.replaceFirst(".$", "?");
		System.out.println(reverseSentence);

		// Part 2

		String[] wordList = { "Stressed", "Parts", "Straw", "Keep", "Wolf" };
		String reversedWord = "";

		for (int i = 0; i < wordList.length; i++) {
			reversedWord = reversedWord+wordList[i];
			reversedWord= new StringBuilder(reversedWord).reverse().toString();
			
			System.out.println(reversedWord);
			reversedWord ="";

		}

	}

}
